block variables
	- var modif_color = "fullscreen-form_blue"
	- var heading = "Подпишитесь на рассылку"
	- var text = "Рассказываем о здоровье и развитии малышей"
	- var is_need_date = true
	- var is_need_question = false
	- var submit_placeholder = "Подписаться"
	- var image_src = "img/form-subscribe-image.jpg"
	- var button_color = "white"
	- var is_reverse_order = false



section.fullscreen-form(class=[modif_color, is_reverse_order ? "fullscreen-form_reverse-order" : ""] )
	.fullscreen-form__column
		form.fullscreen-form__body(action='#' method='POST')
			.fullscreen-form__header
				.fullscreen-form__heading= heading
				.fullscreen-form__text= text
			.fullscreen-form__wrapper
				.fullscreen-form__item.fullscreen-form__item_border.fullscreen-form__item_big
					input.fullscreen-form__client-name(type='text' placeholder='Ваше имя' name='name')
				if is_need_date
					.fullscreen-form__item.fullscreen-form__item_border.fullscreen-form__item_big
						input.fullscreen-form__client-date(type='text' name='date', placeholder="День рождения малыша")
				.fullscreen-form__item.fullscreen-form__item_border.fullscreen-form__item_big
					input.fullscreen-form__client-email(type='email' placeholder='E-mail' name='email')
				if is_need_question
					.fullscreen-form__item.fullscreen-form__item_border.fullscreen-form__item_big
						input.fullscreen-form__client-question(type='text' placeholder='Вопрос' name='question')
				.fullscreen-form__item
					input.about-button.fullscreen-form__button(type="submit" value=submit_placeholder, class=`about-button_${button_color}`)
				.fullscreen-form__item
					.fullscreen-form__agree-text Отправляя сообщение, вы даёте #[a.fullscreen-form__agree-link.menu-link(href="#") согласие] на обработку персональных данных.
	.fullscreen-form__column
		img.fullscreen-form__image(src=image_src alt='#')
